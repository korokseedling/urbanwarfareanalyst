# AI Urban Warfare Analyst - Environment Variables
# Copy this file to .env and fill in your actual API keys

# Google Gemini API Key
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenAI API Key (for future stages if needed)
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
# Stage 2: Frame Analysis Model - Fast multimodal model for tactical analysis
GEMINI_ANALYSIS_MODEL=gemini-2.5-flash-preview-09-2025

# Stage 3: Image Overlay Generation Model - Image editing/generation model
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview

# Default/Fallback Model
GEMINI_MODEL=gemini-2.5-flash-preview-09-2025

# Model Parameters
TEMPERATURE=0.7
MAX_TOKENS=2048

# Video Processing Limits
MAX_VIDEO_DURATION=120
MAX_FILE_SIZE_MB=100

# Frame Extraction Settings
NUM_FRAMES=3
FRAME_RESIZE_MAX=720
